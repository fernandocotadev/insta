<% layout('layouts/boilerplate') %>

<div style="background-color: black; color: white;">

    <div class="text-center">
      <br>

        <h1 style="font-family: Monoton;margin: auto; color: #fff; text-shadow: 0 0 7px #fff, 0 0 10px #fff, 0 0 21px #fff, 0 0 42px #0fa, 0 0 82px #0fa, 0 0 92px #0fa, 0 0 102px #0fa, 0 0 151px #0fa;">
            Show Post...
        </h1>
        <br>
        <br>
        <br>
    </div>

    <div>
        <div class="card mb-3" style="width: 1233px; margin: auto; background-color: black; color: white;">
            <div class="row g-0">
                <div class="col-md-9">
                    <img class="img-fluid rounded-start" style="width: 757px;" src="<%= post.url %>" alt="Img cap">
                </div>

                <div class="col-md-3">
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-2">
                                    <img class="" style="border-radius: 50%; width: 12px;" src="https://www.w3schools.com/howto/img_avatar.png">
                                </div>
                                <div class="col-10" style="line-height: .7;">
                                    <p><b><%= post.username %></b></p>
                                    <p><%= post.location %></p>
                                </div>
                            </div>
                        </div>

                        <p class="card-text">
                            <b><%= post.username %></b> &#160 <%= post.description %>
                        </p>

                        <p class="card-text"><small class="text-muted"><%= post._id %></small></p>
                        <p class="blockquote-footer"><%= new Date().toLocaleDateString('en-us', { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %></p>

                        <a href="/posts/" class="btn btn-primary">See All</a>
                        <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit....</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

</html>
