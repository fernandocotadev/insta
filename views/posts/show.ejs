<% layout('layouts/boilerplate') %>

<div style="background-color: black; color: white;">

    <div class="text-center">
      <br>

        <h1 style="font-family: Monoton;margin: auto; color: #fff; text-shadow: 0 0 7px #fff, 0 0 10px #fff, 0 0 21px #fff, 0 0 42px #0fa, 0 0 82px #0fa, 0 0 92px #0fa, 0 0 102px #0fa, 0 0 151px #0fa;">
            Show Post...
        </h1>
        <br>
        <br>
        <br>
    </div>




    


    <div>
        <div class="card mb-3" style="width: 1233px; margin: auto; background-color: black; color: white;">
            <div class="row g-0">





                <!-- <div class="col-md-9">
                    <img class="img-fluid rounded-start" style="width: 757px;" src="<%= post.images[0].url %>" alt="Img cap">
                </div> -->

                <div id="postCarousel" class="carousel slide" data-ride="carousel" style="width: 757px;">
                    <div class="carousel-inner">
                        <% post.images.forEach((img, i) => {  %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%= img.url%>" class="d-block w-100" alt="">
                        </div>
                        <% }) %>
                
                    </div>
                    <% if(post.images.length > 1) {%>
                    <a class="carousel-control-prev" href="#postCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#postCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
                </div>





                <div class="col-md-3">
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-2">
                                    <img class="" style="border-radius: 50%; width: 12px;" src="https://www.w3schools.com/howto/img_avatar.png">
                                </div>
                                <div class="col-10" style="line-height: .7;">
                                    <p><b><%= post.username %></b></p>
                                    <p><%= post.location %></p>
                                </div>
                            </div>
                        </div>

                        <p class="card-text">
                            <b><%= post.username %></b> &#160 <%= post.description %> &#160 <%= post.lastEdit %>
                        </p>

                        <p class="card-text"><small class="text-muted"><%= post._id %></small></p>
                        <p class="blockquote-footer"><%= new Date().toLocaleDateString('en-us', { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %></p>

                        <a href="/posts/" class="btn btn-primary">See All</a>
                        <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit....</a>

                        <div>
                            <form action="/posts/<%= post._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger mb-2">Delete</button>
                              </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="col-6">
            <div id='map' ></div>

            <% if(currentUser){ %>
            <h2>Add Comment...</h2>
            <form action="/posts/<%=post._id%>/comments" method="POST" novalidate class="validated-form mb-3">
                
                <div class="mb-3">
                    <label class="form-label" for="body">Comment</label>
                    <textarea class="form-control" name="comment[body]" id="body" cols="30" rows="4" required></textarea>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Comment required.</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% } %>
            <h1>Comments</h1>
            
            <div class="card mb-3 ">
                <div class="card-body bg-dark">
            
                    <br>
                    <% for(let comment of post.comments) { %>
                    <p class="card-text"> <img class="" style="border-radius: 50%; width: 12px;" src="https://www.w3schools.com/howto/img_avatar.png"> <b><%= comment.author.username %> </b> &#160 <%= comment.body %></p>

                   
                    <form action="/posts/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <br>

                <% } %>

                </div>
            </div>
            
        </div>
    </div>

    

</div>


<br>
<br>
<br>



<br>
<br>
<br>















