<% layout('layouts/boilerplate')%>



<div class="text-center">
    <h1 style="font-family:Monoton;width:33px;margin:auto;">All Posts</h1>
</div>












<div class="container d-flex align-items-center justify-content-center">
<div >



<div class="container">
    <div class="row">




<div class="col">
    <% for (let post of posts){%>
    <div class="card" style="width: 18rem;">


<div>

    <div class="container">
        <div class="row">
          <div class="col">
            <img style="border-radius:50%;width:18px" src="https://www.w3schools.com/howto/img_avatar.png"></img>
          </div>
          <div class="col" style="line-height:12px;">
            <p><%= post._id %></p>
            <p><%= post.location %></p>            
          </div>
        </div>
      </div>

</div>




        <img src="<%=post.url%>" class="card-img-top" alt="Image for post"/>
        <div class="card-body">
            <div>
                <p>Likes</p>
            
                <h5 class="card-title"> <b><%= post._id %></b>  <%= post.title %></h5>
                

            </div>
        </div>
        
        <div class="card-body">
          

          <p><%= new Date().toLocaleDateString('en-us', { weekday:"long", year:"numeric", month:"short", day:"numeric", hour:"numeric", minute:"numeric"}) %></p>

          <a href="http://localhost:3000/posts/<%= post._id %>" class="btn btn-primary">Details</a>
        </div>
      </div>
      <br>
      <% }%>
</div>



</div>
</div>


</div>
</div>








</body>

</html>